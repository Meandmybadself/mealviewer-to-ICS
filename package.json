    "@types/mime": "^2.0.3",
    "chalk": "^4.1.2",
    "esbuild": "^0.8.18",
    "estrella": "1.3.0",
    "fs-extra": "^9.1.0",
    "ical-generator": "^6.0.1",
    "rimraf": "^3.0.2",
    "sass": "^1.72.0",
    "types-cloudflare-worker": "^1.2.0"
  },
  "devDependencies": {
    "@cloudflare/kv-asset-handler": "^0.2.0",
